{
  "name": "metro-frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/metro-frontend/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/metro-frontend",
        "browser": "apps/metro-frontend/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "apps/metro-frontend/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/metro-frontend/public"
          }
        ],
        "styles": [
          "apps/metro-frontend/src/styles.scss"
        ],
        "server": "apps/metro-frontend/src/main.server.ts",
        "ssr": {
          "entry": "apps/metro-frontend/src/server.ts"
        },
        "outputMode": "server",
        "extractLicenses": true
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "metro-frontend:build:production"
        },
        "development": {
          "buildTarget": "metro-frontend:build:development"
        }
      },
      "defaultConfiguration": "development",
      "dependsOn": [
        "metro-backend:serve"
      ],
      "options": {
        "proxyConfig": "apps/metro-frontend/proxy.conf.json"
      }
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "metro-frontend:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/metro-frontend/jest.config.ts",
        "tsConfig": "apps/metro-frontend/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "metro-frontend:build",
        "port": 4200,
        "staticFilePath": "dist/apps/metro-frontend/browser",
        "spa": true
      }
    }
  }
}